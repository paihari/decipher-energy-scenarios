# Dockerfile
FROM jupyter/scipy-notebook:latest

USER root

# Set environment variables to ensure non-interactive installations
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1

# Install system dependencies for Unstructured PDF parsing
RUN apt-get update && apt-get install -y --no-install-recommends \
    poppler-utils \
    tesseract-ocr \
    tesseract-ocr-deu \
    tesseract-ocr-eng \
    libreoffice \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Create directories for data
RUN mkdir -p /home/jovyan/data

# Install Python packages
COPY requirements_notebook.txt .
RUN pip install --no-cache-dir -r requirements_notebook.txt

# Switch back to jovyan user (the default user in Jupyter images)
USER jovyan